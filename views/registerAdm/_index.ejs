    <body>
        <header class="header-top">
            <button onClick="javascript:window.location.href='/adm/painel', {danger: ''} "><i class="material-icons">arrow_back </i></button>
            <span>Cond<i>System</i></span>
        </header>

        <% if (danger == undefined || danger == null || danger2 == undefined || danger2 == null) {
            danger = " "
            danger2 = " "
        }
        %>
        <div class="container ">
            <div class="row ">
                <aside class="col-md-6 offset-md-3" >

                    <div class="alert-div">
                        <h3 id="alert1" class="alert1" > <%= danger %></h3>
                        <h3 id="alert2" class="alert2" > <%= danger2 %></h3>
                    </div>
                    

                    <div class="card shadow " >
                        <article class="card-body">
                            <h4 class="card-title mb-4 mt-1">Sign up</h4>

                            <form method="POST" enctype="application/x-www-form-urlencoded">
                                <div class="form-group">
                                    <label>Nome Completo</label>
                                    <input class="form-control"  required placeholder="Jose Gritz Suarez" type="text" name="nome" id="tx1" value="">
                                </div>
                                
                                <div class="form-group">
                                    <label>Email</label>
                                    <input class="form-control"  required placeholder="Jose_Gritz36" value="" type="text" name="email" id="txt2" >
                                </div>

                                    <div class="form-group">
                                        <label>Senha</label>
                                        <input class="form-control" required placeholder="*********" type="password" value="" name="senha" id="txt3">
                                    </div> 
                                    

                                <div class="form-group">
                                    <button type="submit" required class="btn btn-primary btn-block" value="Verificar" onclick="verificar()" > Register  </button>
                                </div>   
                            </form>
                        </article>
                    </div>
                </aside>
            </div>
        </div>
        <script>
            function verificar(){
                var txtv = window.document.querySelector('input#txt1') // var "txtv" pegando informações que usuario digitar no Nome  
                var txtw = window.document.querySelector('input#txt2')  // var "txtw" pegando informações que usuario digitar na Senha 1 
                var txtx = window.document.querySelector('input#txt3')  // var "txtx" pegando informações que usuario digitar na Senha 2

                var nome   = (txtv.value)
                var email = (txtw.value)                            // Transforma  "txtv" em var Nome
                var senha = (txtx.value)                            // Transforma  "txtw" em var senha1
                
            // os input não vai aceitar campos vazios por causa do atributo "required"

                // se nome for menor que 5 caracteres imprime na tela um alerta de  Insira nome correto!!
                if (nome.length < 5){                            
                    alert("Insira um nome Correto!!")
                    }
                
                // se variavel senha for igual a zero imprime na tela um alerta de  Senha não informado!!
                if (senha.length < 3 ){
                    alert("Senha não informado!")
                }
                
            }
        </script>

